#!/usr/bin/make -f

DH_VERBOSE = 1

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/cmake.mk

DEB_CMAKE_EXTRA_FLAGS := -DSKIP_DEFAULTS=ON \
                         -DBUILD_SHARED_LIBS=ON \
                         -DPACKAGE_VENDOR=NextGIS \
                         -DBUILD_TESTING=OFF \
                         -DCMAKE_BUILD_TYPE=Release \
                         -DWITH_BINDINGS=OFF -DWITH_AUTH=OFF -DWITH_ANALYSIS=OFF -DWITH_GUI=OFF -DWITH_DESKTOP=OFF -DWITH_3D=OFF -DWITH_QGIS_PROCESS=OFF

# Support parallel building if enabled in DEB_BUILD_OPTIONS
DEB_BUILD_PARALLEL = 1
